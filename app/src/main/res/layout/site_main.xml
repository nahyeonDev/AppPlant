<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">


        <LinearLayout
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/main_green">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.99"
                android:orientation="vertical">
                <Button
                    android:id="@+id/zOut"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="전체화면"
                    android:fontFamily="@font/main_font"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:visibility="invisible"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"/>
                <!--네이버 지도 배치!-->
                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:name="com.naver.maps.map.MapFragment"/>

            </FrameLayout>

            <LinearLayout
                android:layout_weight="0.01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <ImageButton
                        android:id="@+id/site1"
                        android:layout_marginLeft="38dp"
                        android:layout_width="154dp"
                        android:layout_height="70dp"
                        android:elevation="8dp"
                        android:src="@drawable/ic_site_text1"
                        android:background="@drawable/button2_radius"/>

                    <ImageButton
                        android:id="@+id/site2"
                        android:layout_marginLeft="35dp"
                        android:layout_width="154dp"
                        android:layout_height="70dp"
                        android:elevation="8dp"
                        android:src="@drawable/ic_site_text2"
                        android:background="@drawable/button2_radius"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp">

                    <ImageButton
                        android:id="@+id/site3"
                        android:layout_marginLeft="38dp"
                        android:layout_width="154dp"
                        android:layout_height="70dp"
                        android:elevation="8dp"
                        android:src="@drawable/ic_site_text3"
                        android:background="@drawable/button2_radius"/>

                    <ImageButton
                        android:id="@+id/site4"
                        android:layout_marginLeft="35dp"
                        android:layout_width="154dp"
                        android:layout_height="70dp"
                        android:elevation="8dp"
                        android:src="@drawable/ic_site_text4"
                        android:background="@drawable/button2_radius"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

</LinearLayout>